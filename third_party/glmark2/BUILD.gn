import("../../gni/angle.gni")

config("glmark2_glad_config") {
  include_dirs = [ "glad/include" ]
}

# Glad permalink:
# http://gen.glad.sh/#profile=gl%3Dcompatibility%2Cgles1%3Dcommon&api=egl%3D1.5%2Cgl%3D3.2%2Cgles2%3D2.0%2Cglx%3D1.4%2Cwgl%3D1.0&extensions=EGL_EXT_platform_base%2CGLX_EXT_swap_control%2CGLX_MESA_swap_control%2CGL_OES_mapbuffer%2CGL_OES_required_internalformat&generator=c
source_set("glmark2_glad_gles") {
  sources = [
    "glad/include/glad/egl.h",
    "glad/include/glad/gles2.h",
    "glad/src/egl.c",
    "glad/src/gles2.c",
  ]

  if (is_linux) {
    sources += [
      "glad/include/glad/glx.h",
      "glad/src/glx.c",
    ]
  }

  public_configs = [ ":glmark2_glad_config" ]
}

source_set("glmark2_glad_gl") {
  sources = [
    "glad/include/glad/egl.h",
    "glad/include/glad/gl.h",
    "glad/src/egl.c",
    "glad/src/gl.c",
  ]

  if (is_linux) {
    sources += [
      "glad/include/glad/glx.h",
      "glad/src/glx.c",
    ]
  }

  if (is_win) {
    sources += [
      "glad/include/glad/wgl.h",
      "glad/src/wgl.c",
    ]
  }

  public_configs = [ ":glmark2_glad_config" ]
}

raw_glmark_data_path = "../../../../../third_party/glmark2/src/data"

config("glmark2_gles_config") {
  defines = [
    "GLMARK2_USE_GLESv2",
    "GLMARK_DATA_PATH=\"${raw_glmark_data_path}\"",
  ]
  if (is_win) {
    # M_PI is nonstandard.
    defines += [ "_USE_MATH_DEFINES" ]
  }
  include_dirs = [
    "include",
    "src/src",
  ]
}

config("glmark2_gl_config") {
  defines = [
    "GLMARK2_USE_GL",
    "GLMARK_DATA_PATH=\"${raw_glmark_data_path}\"",
  ]
  if (is_win) {
    # M_PI is nonstandard.
    defines += [ "_USE_MATH_DEFINES" ]
  }
  include_dirs = [
    "include",
    "src/src",
  ]
}

# Supplies compatible headers on Win32.
config("glmark2_header_overrides_config") {
  if (is_win) {
    if (is_clang) {
      cflags = [
        "-Wno-unused-function",
        "-Wno-writable-strings",
        "-Wno-extra-tokens",
      ]
    }
  }
}

source_set("glmark2_header_overrides") {
  if (is_win) {
    sources = [
      "include/dirent.h",
      "include/getopt.h",
      "include/sys/time.h",
