glmark2_version = "2017.07"

executable("glmark2_angle") {
  sources = [
    "src/src/canvas-generic.cpp",
    "src/src/canvas-generic.h",
    "src/src/gl-state-egl.cpp",
    "src/src/gl-state-egl.h",
    "src/src/main.cpp",
  ]
  deps = [
    ":glmark2_common_gles",
  ]
  data = [
    "src/data",
  ]

  defines = [
    "EGL_EGL_PROTOTYPES=1",
    "GLMARK2_USE_ANGLE",
    "GLMARK2_USE_EGL",
    "GLMARK_VERSION=\"${glmark2_version}\"",
  ]

  if (is_win) {
    defines += [ "GLMARK2_USE_WIN32" ]
    sources += [
      "src/src/native-state-win32.cpp",
      "src/src/native-state-win32.h",
    ]
  }
}

if (is_win) {
  executable("glmark2_wgl") {
    sources = [
      "src/src/canvas-generic.cpp",
      "src/src/canvas-generic.h",
      "src/src/gl-state-wgl.cpp",
      "src/src/gl-state-wgl.h",
      "src/src/main.cpp",
      "src/src/native-state-win32.cpp",
      "src/src/native-state-win32.h",
    ]
    deps = [
      ":glmark2_common_gl",
    ]
    data = [
      "src/data",
    ]

    libs = [ "opengl32.lib" ]

    defines = [
      "GLMARK2_USE_WGL",
      "GLMARK2_USE_WIN32",
      "GLMARK_VERSION=\"${glmark2_version}\"",
    ]
  }
}
