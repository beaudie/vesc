}

ocl_cts_library("cl_read_write_images") {
  include_dirs = [
    "$angle_root/third_party/OpenCL-CTS/gtest/",
    "$angle_root/third_party/OpenCL-CTS/src/test_conformance/images/clReadWriteImage",
  ]
  deps = [ ":source_test_cl_read_write_images" ]
  sources = [
    "$angle_root/third_party/OpenCL-CTS/gtest/main_wrapper.cpp" ]
}
