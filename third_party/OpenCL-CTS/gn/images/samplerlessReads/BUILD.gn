}

ocl_cts_library("samplerless_reads") {
  include_dirs = [
    "$angle_root/third_party/OpenCL-CTS/gtest/",
    "$angle_root/third_party/OpenCL-CTS/src/test_conformance/images/samplerlessReads",
  ]
  deps = [ ":source_test_samplerless_reads" ]
  sources = [
    "$angle_root/third_party/OpenCL-CTS/gtest/main_wrapper.cpp" ]
}
