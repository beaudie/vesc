config("spirv_cross_public") {
  include_dirs = [ "src" ]

  defines = [ "SPIRV_CROSS_EXCEPTIONS_TO_ASSERTIONS" ]
}

source_set("spirv_cross_sources") {
  public_configs = [ ":spirv_cross_public" ]

  sources = [
    "src/GLSL.std.450.h",
    "src/spirv.hpp",
    "src/spirv_cfg.cpp",
    "src/spirv_cfg.hpp",
    "src/spirv_common.hpp",
    "src/spirv_cross.cpp",
    "src/spirv_cross.hpp",
    "src/spirv_cross_containers.hpp",
    "src/spirv_cross_error_handling.hpp",
    "src/spirv_cross_parsed_ir.cpp",
    "src/spirv_cross_parsed_ir.hpp",
    "src/spirv_cross_util.cpp",
    "src/spirv_cross_util.hpp",
    "src/spirv_glsl.cpp",
    "src/spirv_glsl.hpp",
    "src/spirv_msl.cpp",
    "src/spirv_msl.hpp",
    "src/spirv_parser.cpp",
    "src/spirv_parser.hpp",
    "src/spirv_reflect.cpp",
    "src/spirv_reflect.hpp",
  ]

  cflags = [ "-fno-exceptions" ]

  if (is_clang) {
    cflags_cc = [
      "-Wno-extra-semi",
      "-Wno-ignored-qualifiers",
      "-Wno-implicit-fallthrough",
      "-Wno-inconsistent-missing-override",
      "-Wno-sign-compare",
      "-Wno-unused-variable",
      "-Wno-missing-field-initializers",
      "-Wno-newline-eof",
    ]
  }
}
